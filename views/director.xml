<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_yu_directors_list_kanban">
            <field name="name">yu.director.kanban</field>
            <field name="model">yu.director</field>
            <field name="arch" type="xml">
                <kanban >
                    <field name="name"/>
                    <field name="area_id"/>
                    <field name="birthdate"/>
                    <templates>
                        <t t-name="kanban-box">
                          <div class="oe_module_vignette oe_kanban_global_click">
                            <div class="oe_module_desc">
                              <h4><field name="name"/></h4>
                              <p class="oe_module_name">
                                 <t t-if="record.area_id.raw_value"><field name="area_id"/><br/></t>
                                 <i><field name="birthdate"/></i>
                              </p>
                            </div>
                          </div>
                        </t>
                  </templates>
                </kanban>
            </field>
        </record>
        <record id="view_yu_directors_list_tree" model="ir.ui.view">
            <field name="name">yu.director</field>
            <field name="model">yu.director</field>
            <field name="arch" type="xml">
                <tree string="导演列表">
                    <field name="name" />
                    <field name="area_id"/>
                    <field name="birthdate"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_yu_directors_list_form">
            <field name="name">yu.director</field>
            <field name="model">yu.director</field>
            <field name="arch" type="xml">
                <form string="导演详情">
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="area_id"/>
                                <field name="birthdate"/>
                            </group>
                            <notebook colspan="4">
                            <page string="该导演的电影" autofocus="autofocus">
                                <field name="director_movies">
                                    <tree string="电影列表" editable="bottom">
                                        <field name="movies_id" />
                                        <field name="show_date" readonly='1'/>
                                        <field name="directors" readonly='1'/>
                                        <field name="area_id" readonly='1' />
                                        <field name="score" readonly='1'/>
                                        <field name="style_ids" readonly='1' />
                                    </tree>
                                </field>
                            </page>
                            <page string="获奖情况" autofocus="autofocus">
                                <field name="director_awards">
                                    <tree string="获奖" editable="bottom">
                                        <field name="movies_awards_id" required='1'/>
                                        <field name="awards_type_id" required='1'/>
                                        <field name="awards" required='1' />
                                        <field name="movies_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        </group>
                </form>
            </field>
        </record>
    </data>
</openerp>