<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_yu_directors_list_tree" model="ir.ui.view">
            <field name="name">yu.director</field>
            <field name="model">yu.director</field>
            <field name="arch" type="xml">
                <tree string="导演列表">
                    <field name="name" />
                    <field name="area_id"/>
                    <field name="birthdate"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_yu_directors_list_form">
            <field name="name">yu.director</field>
            <field name="model">yu.director</field>
            <field name="arch" type="xml">
                <form string="导演详情">
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="area_id"/>
                                <field name="birthdate"/>
                            </group>
                        </group>
                </form>
            </field>
        </record>
    </data>
</openerp>